= simple_form_for @appointment, HTML: { multipart: true } do |f|
	- if @appointment.errors.any?
		#errors
			%p
				= @appointment.errors.count
				Prevented this provider from saving
			%ul
				- @appointment.errors.full_messages.each do |msg|
					%li = msg
	.panel-body
		= f.association :appointmenttype, label_method: :apptype, value_method: :id, include_blank: false, input_html: {class: 'form-control'}
		= f.association :provider, label_method: :name, value_method: :id, include_blank: false, input_html: {class: 'form-control'}
		= f.association :patient, label_method: :last_name, value_method: :id, include_blank: false, input_html: {class: 'form-control'}
		= f.input :apptconfirmed, input_html: {class: 'form-control'}
		= f.input :apptcompleted, input_html: {class: 'form-control'}

	= f.button :submit, class: "btn btn-primary"
