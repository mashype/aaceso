.form-group.clearfix.inline
	.nested-fields
	%label.col-sm-3.control-label.text-right First Name
	.col-sm-9
		=f.input :first_name, input_html: {class: "form-input form-control"}
	%label.col-sm-3.control-label.text-right Last Name
	.col-sm-9
		=f.input :last_name, input_html: {class: "form-input form-control"}
	%label.col-sm-3.control-label.text-right Member ID
	.col-sm-9
		=f.input :member_id, input_html: {class: "form-input form-control"}
	%label.col-sm-3.control-label.text-right Remove Relation
	.col-sm-9
		= link_to_remove_association "Remove", f, class: "form-button btn btn-default"